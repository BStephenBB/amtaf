mixin card(cardData)
  each card in cardData
    div(class="tech col-12@xs col-6@sm col-4@md" data-groups='[' + '"' + card.tags[0] + '"' + ']')
      .content
        h2.title= card.title
        p= card.description
        .the-tags
          each tag in card.tags
            .tag
              .innerCircle
                .tooltip
                  .tooltip-txt= tag

